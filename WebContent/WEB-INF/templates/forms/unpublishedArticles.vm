<HTML>
<head>
 <meta charset="ISO-8859-1">
 #include( "/commonElements/head.html" )
 <TITLE>$apptitle</TITLE>
</head>

#parse( "/commonElements/navbar.vm" )
<body>
#if(!$session.user.name)
<div class="jumbotron"> 

             <div class="container">
             
<h2 >Sorry you are not authenticated to access this part of website</h2>
</div>
</div>

#else

<div class="container">
    <div class="page-header">
      <br/>
      <h1>List of the Unpublished Articles</h1>
    </div> 
    <div class="col-md-10">
      
        <form name="myform" action="articles" method="post" class="form-horizontal" onsubmit="setTimeout('parent.location.reload()',500); return true;">
             #foreach($article in $unpubArticle) 
             
             <div class="panel-group" id="accordion"  >
             	  <div class="panel panel-default" >
                    <div class="panel-heading">
                     		<h4 class="panel-title">
                        <div>
                       
                        #if($article.isSelected() == true)
                          <input type="checkbox" name="article" id="$article.getArticleID()" value="$article.getArticleID()" checked>
                        #else
                          <input type="checkbox" name="article" id="$article.getArticleID()" value="$article.getArticleID()">
                      	#end
                        &nbsp;&nbsp;&nbsp; $article.getTitle()
			</div>
                        </h4>
                  	</div> 
                		<div id="#" class="panel-collapse collapse in">
                   			<div class="panel-body">
                     				<p>Summary: $article.getSummary() </p>
                   			</div>
                 		</div>
               	</div>
            	</div>
              
            	#end
              <input type="submit" class="btn btn-default" value="Select"/>
          </form>
       </div>
</div>
#end

</body>
</br>
#parse( "/commonElements/footer.vm" )
</html>
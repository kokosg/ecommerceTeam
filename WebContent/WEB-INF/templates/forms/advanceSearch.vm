	$('#loading_bar').hide();
  }
  window.onload=onLoad;
 </script -->
 <script>
 $('#sandbox-container input').datepicker({
});
</script>
<script>
function myFunction()
{

var e = document.getElementById("mydropdown");
var strUser = e.options[e.selectedIndex].value;

if( strUser == "author" ) {
    $('#results_table').hide();
	$('#loading_bar').hide();
	} else {
	$('#results_table').show();
	}
}
</script>
<body>
#parse( "/commonElements/navbar.vm" )
<!-- <script src="assets/js/advanceSearch.js" type="text/javascript"></script>
<script src="assets/js/onLoad.js" type="text/javascript"></script> -->

<div class="jumbotron"></div>

<div class="bs-docs-section">
	<div class="row">
		<div class="col-lg-7 col-md-10 col-md-push-3">
			<!-- Forms================================================== -->
			<div class="bs-docs-section">
				<div class="row">
					<div class="col-lg-12">
						<div class="well bs-component">
							<form action="advanceSearch" id="advanceSearch" method="post"
								class="form-horizontal">
								<fieldset>
								<input id="flag" name="flag" type="hidden" value = "1">
									<legend>Advance Search: Choose from the dropdown box which category you want to search!</legend>
									<div class="form-group">
										<label for="queryName" class="col-lg-2 control-label">Query Name:</label>
										<div class="col-lg-8">
											<input type="text" class="form-control" name="queryName" id="queryName" placeholder="Search ..." required>
										</div>
										<select id="mydropdown" name="item" class="input-sm col-lg-2" onclick="myFunction()"> required>
										    <option value="article">Article</option>
										    <option value="author">Author</option>
										    <option value="interval">Interval</option>
										    <option value="keywords">keywords</option>
										</select>
									</div>
									<div class="form-group">
										<div class="col-lg-10 col-lg-offset-2">
											<button type="submit" class="btn btn-primary">Submit</button>
											<input type="reset" class="btn btn-default" value="Reset" />
										</div>
									</div>
								</fieldset>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<input data-provide="datepicker">
	
	<!-- <img src="assets/img/ajax-loader.gif" id="loading_bar" align="middle"> -->
	<div class="row">
		<div id="results_table">
			<div class="col-lg-7 col-md-10 col-md-push-3">
				<div class="row">
					<div class="well bs-component">
						<h1>List of Articles</h1>
						<div class="row">
							<div class="col-md-10">
								<table class="table table-hover table-responsive table-bordered table-condensed">
									<tbody class="table-hover">
									<tr>
									#foreach($article in $searchResults) 
										<td>Title: <a href='abstractPage?id=$article.articleID'><strong>$article.title</strong></a> <div><small>Pages: <strong>$article.pageNo</strong> - Submitted: <strong>$article.dateSubmitted</strong></div></td> 
									#end
									</tr>
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
#parse( "/commonElements/footer.vm" )
</body>
</html>
<HTML>
<head>
  <meta charset="ISO-8859-1">
  #include( "/commonElements/head.html" )
  <title>$apptitle</title>
<script src="assets/js/advanceSearch.js" type="text/javascript"></script>
<script src="assets/js/onLoad.js" type="text/javascript"></script>
<script src="//code.jquery.com/jquery-1.10.2.js"></script>
	<script type="text/javascript">
		var counter = 0;
		
		function addKeyword(){
			var keywordValue = document.getElementById("articleKeyword").value;
			if (keywordValue) {
				if (counter < 10) {		
					var keyword = "<div><input type='text' id='keywords' name='keywords' value='" + keywordValue + "' required/><a href='javascript:removeKeyword()' id='removeKeyword'><input class='btn btn-xs btn-danger' value='Remove'/></a></div>";
					counter++;
					$("#articleKeywords").append(keyword); 
				} else {
					alert("You can add up to 10 keywords!");
				}
			}
		}
		
		function removeKeyword(){
			$('#removeKeyword').closest('div').remove(); 
			counter--;
		}

		function addAuthor(){
			var newContent = "<div><label class='control-label' for='authorNames'>Name:</label><input id='authorNames' type='text' name='authorNames' />" 
					+ "<label class='control-label' for='authorSurnames'>Surname:</label><input id='authorSurnames' type='text' name='authorSurnames' /><br />"
					+ "<label class='control-label' for='authorEmails'>Email:</label><input id='authorEmails' name='authorEmails' type='email' placeholder='email@example.com' />"
					+ "<label class='control-label' for='authorAffiliations'>Affiliations:</label><input id='authorAffiliations' type='text' name='authorAffiliations' /><a href='javascript:removeAuthor()' id='removeAuthor'><input class='btn btn-xs btn-danger' value='Remove'/></a></div>";
			$('#authorFields').append(newContent); 
		}

		function removeAuthor(){
			$('#removeAuthor').closest('div').remove(); 
		}
	</script>

</head>

<body>
#parse( "/commonElements/navbar.vm" )

<div class="jumbotron">

<div class="bs-docs-section">
	<div class="row">
		<div class="col-lg-7 col-md-10 col-md-push-3">
			<!-- Form================================================== -->		

			<form action="submit" id="submit" method="post" class="form-horizontal" enctype="multipart/form-data">
			<fieldset>
				<input id="flag" name="flag" type="hidden" value = "1">
				<!-- Form Name -->
				<legend>Submit an Article</legend>
				<h2>Author(s):</h2>
				<p>Insert author(s) details, starting with the main author first.</p>
				<!-- Text input-->
				<div id="authorFields">
					<div><label class="control-label" for="authorNames">Name:</label><input id="authorNames" type="text" name="authorNames" />
					<label class="control-label" for="authorSurnames">Surname:</label><input id="authorSurnames" type="text" name="authorSurnames" /><br />
					<label class="control-label" for="authorEmails">Email:</label><input id="authorEmails" name="authorEmails" type="email" placeholder="email@example.com" />
					<label class="control-label" for="authorAffiliations">Affiliations:</label><input id="authorAffiliations" type="text" name="authorAffiliations" />
					</div>
				</div>
				<a href="javascript:addAuthor()"><input class="btn btn-xs btn-success" value="ADD AUTHOR"/></a>
				
				<h2>Article:</h2>
				<div id="articleFields"> 
					<label class="control-label" for="articleTitle">Title:</label><input id="articleTitle" type="text" name="articleTitle" required/> <br />
					<label class="control-label" for="articleAbstract">Abstract:</label><br /><textarea id="articleAbstract" type="text" name="articleAbstract" rows="6" placeholder="Enter abstract of article" required></textarea><br />
					<label class="control-label" for="pageNum">Number of pages:</label><input type="number" id="pageNum" name ="pageNum" min="1" step="1"/><br />
					<label class="control-label" for="articleKeywords">Keywords:</label><input id="articleKeyword" type="text" name="articleKeyword"/>
						<a href="javascript:addKeyword()"><input class="btn btn-xs btn-success" value="ADD"/></a>
					<div id="articleKeywords"></div>
					<label class="control-label" for="articlePath">Upload File:</label> 
					<input type="file" name="file" size="30" />					
				</div>
								
				<!-- Button -->
				<div class="control-group">
					<label class="control-label" for="subscribe"></label>
					<div class="controls">
						<button id="submitArticle" name="submitArticle" class="btn btn-primary">Submit</button>
						<input type="reset" class="btn btn-default" value="Reset" />
					</div>
				</div>
				
			</fieldset>
			</form>

		</div>
	</div>
</div>
</div>

#parse("/commonElements/footer.vm")
</div>
</body>
</html>
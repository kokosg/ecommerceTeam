<HTML>
<head>
  <meta charset="ISO-8859-1">
  #include( "/commonElements/head.html" )
  <title>$apptitle</title>
<script src="assets/js/advanceSearch.js" type="text/javascript"></script>
<script src="assets/js/onLoad.js" type="text/javascript"></script>
<script src="//code.jquery.com/jquery-1.10.2.js"></script>
	<script type="text/javascript">
		function addField(){
			var newContent = "<div><label class='control-label' for='authorNames'>Name:</label><input id='authorNames' type='text' name='authorNames[]' />" 
					+ "<label class='control-label' for='authorSurnames'>Surname:</label><input id='authorSurnames' type='text' name='authorSurnames[]' /><br />"
					+ "<label class='control-label' for='authorEmails'>Email:</label><input id='authorEmails' name='authorEmails[]' type='email' placeholder='email@example.com' />"
					+ "<label class='control-label' for='authorAffiliations'>Affiliations:</label><input id='authorAffiliations' type='text' name='authorAffiliations[]' />"
					+ "<label class='checkbox inline' for='checkboxes-0'>"
					+ "<input type='checkbox' name='futureEditions' id='futureEditions' value='1'>Main Contact</label><a href='javascript:removeField()' id='remove'>Remove</a></div>";
			$("#authorFields").append(newContent); 
		}

		function removeField(){
			$('#remove').closest('div').remove(); 
		}
	</script>

</head>

<body>
#parse( "/commonElements/navbar.vm" )

<div class="jumbotron">

<div class="bs-docs-section">
	<div class="row">
		<div class="col-lg-7 col-md-10 col-md-push-3">
			<!-- Form================================================== -->		

			<form action="submit" id="submit" method="post" class="form-horizontal">
			<fieldset>
				<input id="flag" name="flag" type="hidden" value = "1">
				<!-- Form Name -->
				<legend>Submit an Article</legend>
				<h2>Author(s):</h2>
				<!-- Text input-->
				<div id='authorFields'>
					<div><label class="control-label" for="authorNames">Name:</label><input id="authorNames" type="text" name="authorNames[]" />
					<label class="control-label" for="authorSurnames">Surname:</label><input id="authorSurnames" type="text" name="authorSurnames[]" /><br />
					<label class="control-label" for="authorEmails">Email:</label><input id="authorEmails" name="authorEmails[]" type="email" placeholder="email@example.com" />
					<label class="control-label" for="authorAffiliations">Affiliations:</label><input id="authorAffiliations" type="text" name="authorAffiliations[]" />
					<label class="checkbox inline" for="checkboxes-0">
					<input type="checkbox" name="futureEditions" id="futureEditions" value="1">
						Main Contact
					</label></div>
				</div>
				<div id='addMore'>
					<a href='javascript:addField()'>add more authors</a>
				</div>
				<h2>Article:</h2>
				<div id='articleFields'> 
					<label class="control-label" for="articleTitle">Title:</label><input id="articleTitle" type="text" name="articleTitle" required/>
					<label class="control-label" for="articleAbstract">Abstract:</label><input id="articleAbstract" type="text" name="articleAbstract" required/><br />
					<label class="control-label" for="articleKeywords">Keywords:</label><br />
					<label class="control-label" for="articlePath">Upload File:</label>
				</div>
								
				<!-- Button -->
				<div class="control-group">
					<label class="control-label" for="subscribe"></label>
					<div class="controls">
						<button id="submit" name="submit" class="btn btn-primary">Submit</button>
						<input type="reset" class="btn btn-default" value="Reset" />
					</div>
				</div>
				
			</fieldset>
			</form>

		</div>
	</div>
</div>
</div>

#parse("/commonElements/footer.vm")
</div>
</body>
</html>
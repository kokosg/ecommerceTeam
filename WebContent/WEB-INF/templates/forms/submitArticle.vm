<HTML>
<head>
  <meta charset="ISO-8859-1">
  #include( "/commonElements/head.html" )
  <title>$apptitle</title>
<script src="assets/js/advanceSearch.js" type="text/javascript"></script>
<script src="assets/js/onLoad.js" type="text/javascript"></script>
<script src="//code.jquery.com/jquery-1.10.2.js"></script>
<script src="assets/js/submitArticle.js" type="text/javascript"></script>

</head>

<body>
#parse( "/commonElements/navbar.vm" )

<div class="container">
  <br>
</div>
<div class="bs-docs-section">
  <br>
  <br>
	<div class="row">
		<div class="col-lg-7 col-md-10 col-md-push-3">
			<!-- Form================================================== -->		
			<div class="well bs-component">
			<form action="submit" id="submit" method="post" class="form-horizontal" enctype="multipart/form-data">
			<fieldset>
				<input id="flag" name="flag" type="hidden" value = "1">
				<!-- Form Name -->
				<legend>Submit an Article</legend>
				<legend>Author(s):</legend>
				<p>Insert author(s) details, starting with the main author first.</p>
				<!-- Text input-->
				<div id="authorFields">
					<div><label class="col-lg-2 control-label" for="authorNames">Name:</label><div class="col-lg-10"><input id="authorNames" class="form-control" type="text" name="authorNames" /></div>
					<label class="col-lg-2 control-label" for="authorSurnames">Surname:</label><div class="col-lg-10"><input id="authorSurnames" class="form-control" type="text" name="authorSurnames" /></div>
					<label class="col-lg-2 control-label" for="authorEmails">Email:</label><div class="col-lg-10"><input id="authorEmails" class="form-control" name="authorEmails" type="email" placeholder="email@example.com" /></div>
					<label class="col-lg-2 control-label" for="authorAffiliations">Affiliations:</label><div class="col-lg-10"><input id="authorAffiliations" class="form-control" type="text" name="authorAffiliations" /></div>
					</div>
				</div>
				<a href="javascript:addAuthor()"><input class="btn btn-xs btn-success" value="ADD AUTHOR"/></a>
				
				<legend>Article:</legend>
				<p>Insert article(s) details</p>
				<div id="articleFields"> 
					<label class="col-lg-2 control-label" for="articleTitle">Title:</label><div class="col-lg-10"><input id="articleTitle" class="form-control" type="text" name="articleTitle" required/></div>
					<label class="col-lg-2 control-label" for="articleAbstract">Abstract:</label><div class="col-lg-10"><textarea id="articleAbstract" class="form-control" type="text" name="articleAbstract" rows="6" placeholder="Enter abstract of article" required></textarea></div>
					<label class="col-lg-4 control-label" for="pageNum">Number of pages:</label><div class="col-lg-8"><input type="number" id="pageNum" class="form-control" name ="pageNum" min="1" step="1"/></div>
					<div><label class="col-lg-2 control-label" for="articleKeywords">Keywords:</label><input id="articleKeyword" type="text" name="articleKeyword"/>
						<a href="javascript:addKeyword()"><input class="btn btn-xs btn-success" value="ADD"/></a>
					<div id="articleKeywords"></div></div>
					<label class="control-label" for="articlePath">Upload File:</label> 
					<input type="file" name="file" size="30" />					
				</div>
								
				<!-- Button -->
				<div class="control-group">
					<label class="control-label" for="subscribe"></label>
					<div class="controls">
						<button id="submitArticle" name="submitArticle" class="btn btn-primary">Submit</button>
						<input type="reset" class="btn btn-default" value="Reset" />
					</div>
				</div>
				
			</fieldset>
			</form>
			</div>
		</div>
	</div>
  <br>
  <br>
</div>

#parse("/commonElements/footer.vm")
</div>
</body>
</html>
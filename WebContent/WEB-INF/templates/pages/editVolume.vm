<HTML>
<head>
  <meta charset="ISO-8859-1">
  #include( "/commonElements/head.html" )
  <TITLE>$apptitle</TITLE>
</head>

<body>
#parse( "/commonElements/navbar.vm" )
<!-- Main jumbotron for a primary marketing message or call to action -->

<div class="jumbotron">
	
<div class="col-md-12">
#if($userRole == "Editor")
		
   #if ($Volume)
   	  
	    #if ($successfully) 
	   		<div class="alert alert-success alert-dismissable">
			  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
			  <strong>$successfully
			</div>
	   	#end
	   	#if ($error) 
	   		<div class="alert alert-danger alert-dismissable">
			  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
			  <strong>$error
			</div>
   		#end
   
	  #if ($Volume.volumeNo == $currentYear)
		<h2>The currently Volume of the year is currently active</h1>
		<h3>
		Current Volume: $Volume.volumeNo
		Created: $Volume.date
		</h3>
	  #else
	  	<div class="bs-docs-section">
			<div class="row">
				<div class="col-lg-7 col-md-10 col-md-push-3">
					<div class="well bs-component">
						<form action="editVolume" method="post" class="form-horizontal">
							<fieldset>
								<legend>Edit Journal</legend>
								<div class="form-group">
									<label for="volumeNo" class="col-lg-2 control-label">volumeNo:</label>
									<div class="col-lg-10">
										<input type="text" class="form-control" name="volumeNo" value="$currentYear" id="volumeNo" disabled>
									</div>
								</div>
								<div class="form-group">
									<label for="date" class="col-lg-2 control-label">date:</label>
									<div class="col-lg-10">
										<input type="text" class="form-control" name="date" value="$currentDate" id="date" disabled>
									</div>
								</div>
								<div class="form-group">
									<div class="col-lg-10 col-lg-offset-2">
										<input id="volumeID" name="volumeID" type="hidden" value="$Volume.journalID">
										<button type="submit" class="btn btn-primary">Create New Volume</button>
									</div>
								</div>
							</fieldset>
						</form>
					</div>
				</div>
			</div>
		</div>
	  #end
   #end

	#else
		<h2 >Sorry you are not authenticated to access this part of website</h2>
	#end
	</div>
</div>

	<div class="col-lg-4">
		<div class="bs-component">
			<div class="well">Look, I'm in a well!</div>
		</div>
	</div>
	<div class="col-lg-8">
		<div class="bs-component">
			<div class="well">Look, I'm in a small well!</div>
		</div>
	</div>
#parse( "/commonElements/footer.vm" )
</body>
</html>
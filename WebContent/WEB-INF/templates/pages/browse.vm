<HTML>
<head>
  <meta charset="ISO-8859-1">
  #include( "/commonElements/head.html" )
  <TITLE>$apptitle</TITLE>
</head>

<body>
#parse( "/commonElements/navbar.vm" )
<!-- Main jumbotron for a primary marketing message or call to action -->
	<div class="jumbotron">
			</div>
	
	
	<div class="col-md-3">
	<div class="panel-group" id="accordion">
 		#foreach($article in $searchResults) 
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" href="#$article.volumeNo">
          Volume: $article.volumeNo
        </a>
      </h4>
    </div>
    <div id="$article.volumeNo" class="panel-collapse collapse in">
      <div class="panel-body">
		Edition: <a href='browse?editionNo=$article.editionNo'>$article.editionNo</a>
      </div>
    </div>
  </div>
  #end
</div>
</div>

<div class="col-md-8">
#if ($searchResults)
	<div class="row">
		<div id="results_table">
			<div class="row">
				<div class="well bs-component">
				   <h1>List of Editions</h1>
					<div class="row">
						<div class="col-md-10">
							<table class="table table-hover table-responsive table-bordered table-condensed">
								<tbody class="table-hover">
								#foreach($article in $editionResults) 
								<tr>
									<td>Title: <a href='abstractPage?id=$article.articleID'><strong>$article.title</strong></a> <div><small>Pages: <strong>$article.pageNo</strong></div></td> 
								</tr>
								#end
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	#end
</div>

<div class="col-md-12">
	<div class="col-lg-4">
		<div class="bs-component">
			<div class="well">Look, I'm in a well!</div>
		</div>
	</div>
	<div class="col-lg-8">
		<div class="bs-component">
			<div class="well">Look, I'm in a small well!</div>
		</div>
	</div>
#parse( "/commonElements/footer.vm" )
</div>
</body>
</html>